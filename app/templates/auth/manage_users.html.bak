{% extends "layout.html" %}

{% block content %}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4><i class="fas fa-users-cog"></i> User Management</h4>
                    <a href="{{ url_for('auth.invite_user') }}" class="btn btn-success">
                        <i class="fas fa-user-plus"></i> Create New User
                    </a>
                </div>
                <div class="card-body">
                    {% if users %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th>Created</th>
                                        <th>Last Login</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for user in users %}
                                    <tr>
                                        <td>
                                            <i class="fas fa-user"></i>
                                            {{ user.email }}
                                        </td>
                                        <td>
                                            {% if user.role == 'admin' %}
                                                <span class="badge bg-danger">Administrator</span>
                                            {% else %}
                                                <span class="badge bg-primary">User</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if user.created_at %}
                                                {{ user.created_at[:10] }}
                                            {% else %}
                                                N/A
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if user.last_sign_in_at %}
                                                {{ user.last_sign_in_at[:10] }}
                                            {% else %}
                                                <span class="text-muted">Never</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if user.email_confirmed_at %}
                                                <span class="badge bg-success">Confirmed</span>
                                            {% else %}
                                                <span class="badge bg-warning">Pending</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                {% if user.role != 'admin' %}
                                                    <button type="button" class="btn btn-outline-warning" 
                                                            onclick="changeRole('{{ user.id }}', 'admin')">
                                                        <i class="fas fa-user-shield"></i> Make Admin
                                                    </button>
                                                {% else %}
                                                    <button type="button" class="btn btn-outline-secondary" 
                                                            onclick="changeRole('{{ user.id }}', 'user')">
                                                        <i class="fas fa-user"></i> Make User
                                                    </button>
                                                {% endif %}
                                                {% if user.email != current_user.email %}
                                                    <button type="button" class="btn btn-outline-danger" 
                                                            onclick="deleteUser('{{ user.id }}', '{{ user.email }}')">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </button>
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            No users found. <a href="{{ url_for('auth.invite_user') }}">Create the first user</a>.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function changeRole(userId, newRole) {
    if (confirm(`Change user role to ${newRole}?`)) {
        fetch('/auth/change_role', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRFToken': '{{ csrf_token() }}'
            },
            body: JSON.stringify({
                user_id: userId,
                role: newRole
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Error changing role: ' + data.message);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error changing role');
        });
    }
}

function deleteUser(userId, userEmail) {
    if (confirm(`Are you sure you want to delete user ${userEmail}? This action cannot be undone.`)) {
        fetch('/auth/delete_user', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRFToken': '{{ csrf_token() }}'
            },
            body: JSON.stringify({
                user_id: userId
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('User deleted successfully');
                location.reload();
            } else {
                alert('Error deleting user: ' + data.message);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error deleting user');
        });
    }
}
</script>
{% endblock %}
